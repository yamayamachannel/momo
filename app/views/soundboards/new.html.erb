<body>
<h2>意見箱</h2>
<%= form_with url:soundboards_path ,local: true do |form| %>
      <div class="field">
     <%= form.text_field :opinion %>
     </div>
     <div class="actions">
      <%= form.submit "送信" %>
      </div>
<% end%>

      <% @soundboards.each do |soundboard| %>
            <br>
        <%= soundboard.opinion %><br />
            <hr size=#"fff">
      <% end %> 
</body>