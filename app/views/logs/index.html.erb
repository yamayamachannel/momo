<header>
<h2>履歴</h2>
</header>

<%= form_tag(logs_path,:method => 'get') do %>
    <select name="me" id="me">
        <% @memos.each do |memo| %>
            <option value="<%= memo.id %>"><%= memo.title %></option>
        <% end %>
    </select>
    <%= submit_tag '決定' %>
<%end%>
<br>
<% @logs.each do |log| %>
    <table>
        <tr>
        <th><h3>増加</h3></th>
        <th><h3>減少</h3></th>
        <th><h3>合計</h3></th>
        <th><h3>詳細</h3></th>
        </tr>
        <tr>
        <td><h3><%= log.money %></h3></td>
        <td><h3><%= log.money %></h3></td>
        <td><h3><%= log.sum %></h3></td>
        <td><h3><%= log.comment %></h3></td>
        </tr>
        </table>
<% end %> 
